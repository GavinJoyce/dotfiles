gac() { git add . && git commit -m "$*" }
gacp() { git add . && git commit -m "$*" && git push }
gaf() { git add . && git commit -am "fixup! $*" }
gas() { git add . && git commit -am "squash! $*" }

function hr { printf '=%.0s' $(seq $COLUMNS); }

alias csha="~/dev/dotfiles/scripts/csha.rb"
alias cbn="~/dev/dotfiles/scripts/cbn.rb"

function fsha() {
	if [[ "$@" != "" ]]; then
		for hash in $@;do
			echo $hash;
	git branch -a --contains $hash | grep 'master\|staging\|production';\
		done;
	else
		echo "You must give a hash argument.";
	fi
}

function mk() {
  if [ ! -n "$1" ]; then
    echo "Enter a directory name"
	elif [ -d $1 ]; then
    echo "\`$1' already exists"
  else
    mkdir $1 && cd $1
  fi
}

